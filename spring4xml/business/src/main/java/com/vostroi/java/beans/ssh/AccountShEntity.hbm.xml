<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.vostroi.java.beans.ssh.AccountShEntity" table="account_sh" schema="mysql">
        <id name="id">
            <column name="ID" sql-type="int(11)"/>
        </id>
        <property name="username">
            <column name="USERNAME" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="balance">
            <column name="BALANCE" sql-type="decimal(19,2)" precision="19" scale="2" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>